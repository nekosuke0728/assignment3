<h1>Books#new</h1>
<table>
	<%= form_for(@book, url:{controller:'books', action:'new'}) do |form| %>
	<tr><th>タイトル</th><td><%= form.text_field :title, { size:40 } %></td></tr>
	<tr><th>著者</th><td><%= form.text_field :author, { size:40 } %></td></tr>
	<tr><th>価格</th><td><%= form.number_field :price, { size:10 } %></td></tr>
	<tr><th>説明</th><td><%= form.text_area :description, { cols:40, rows:10 } %></td></tr>
	<tr><th>評価</th><td><%= form.text_field :evaluation, { size:40 } %></td></tr>
	<tr><th></th><td><%= form.submit "保存" %></td></tr>
	<% end %>
</table>
<p class="link"><a href="/books">&lt;&lt; ※トップページに戻る</a></p>
